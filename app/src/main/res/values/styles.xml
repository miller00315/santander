<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/santanderRed</item>
        <item name="colorPrimaryDark">@color/santanderRed</item>
        <item name="colorAccent">@color/santanderRed</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="bar_title" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/dinpro_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/txtRegular</item>
    </style>

    <style name="editTextStyle">
        <item name="colorControlNormal">@color/santanderLtGray</item>
        <item name="colorControlActivated">@color/santanderLtGray</item>
        <item name="colorControlHighlight">@color/santanderLtGray</item>
        <item name="android:textColorPrimary">@color/santanderGray</item>
        <item name="android:textColorSecondary">@color/santanderGray</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/santanderRed</item>
        <item name="android:textColorSecondary">@color/santanderLtGray</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">@color/santanderLtGray</item>
        <item name="colorControlActivated">@color/santanderLtGray</item>
        <item name="colorControlHighlight">@color/santanderLtGray</item>
        <item name="android:textColorPrimary">@color/santanderLtGray</item>
        <item name="android:textColorSecondary">@color/santanderLtGray</item>
        <item name="android:textColorHint">@color/santanderLtGray</item>
    </style>

</resources>
